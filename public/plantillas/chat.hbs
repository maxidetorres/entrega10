
    <div class="mt-3">
        <div class="">
            <h1>Centro de Mensaje </h1>
            <p>(compresi√≥n de mensajes {{roundTotalCompresion}} %)<p>
         
            <form id="formChat">
                <div class="form-group col-12">
                    <input id="email" placeholder="example@com.ar" class="form-control" type="text" name="email" required>
                </div>
                <div class="form-group col-12">
                    <input id="nombre" placeholder="Nombre" class="form-control" type="text" name="nombre" required>
                </div>
                <div class="form-group col-12">
                    <input id="apellido" placeholder="Apellido" class="form-control" type="text" name="apellido" required>
                </div>
                <div class="form-group col-12">
                    <input id="edad" placeholder="Edad" class="form-control" type="number" name="edad" required>
                </div>
                <div class="form-group col-12">
                    <input id="alias" placeholder="Alias" class="form-control" type="text" name="alias" required>
                </div>
                <div class="form-group col-12">
                    <input id="avatar" placeholder="Url de avatar" class="form-control" type="text" name="avatar" required>
                </div>
                {{#if mensajes.length}}
                <div class="">
                    {{#each mensajes}}
                    <div class="col-xl-12">
                        <span class="col-xl-4" style="color:blue;">{{this.author.id}}<span style="color:red;">[{{this.date}}]:</span></span>
                        
                        <span class="col-xl-4" style="color:green;">{{this.mensaje}}</span>
                    </div>
                     {{/each}}
                </div>
                {{/if}}

                <div class="form-group input-group col-12">
                   <input id="mensaje" plaeholder="Ingrese mensaje.." class="form-control col-6" type="text" name="mensaje" required>
                <div class="col-6">
                    <button class="btn btn-success">Enviar</button>
                </div>
                </div>
            </form>
            <br>
        </div>
    </div>